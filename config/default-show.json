{
  "$schema": "./show-config.schema.json",
  "name": "Default Show Configuration",
  "description": "Template configuration - replace with actual musical content",
  
  "rowCount": 8,
  
  "factions": [
    { "id": 0, "name": "Faction A", "color": "#FF6B6B" },
    { "id": 1, "name": "Faction B", "color": "#4ECDC4" },
    { "id": 2, "name": "Faction C", "color": "#FFE66D" },
    { "id": 3, "name": "Faction D", "color": "#95E1D3" }
  ],
  
