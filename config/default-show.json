    "type": "theater_rows",
    "data": {
      "rowPattern": "A-Z",
      "seatsPerRow": 10,
      "comment": "Adjacency: left, right, front-left, front, front-right"
    }
  },
  
  "lobby": {
    "projectorContent": "[Insert thematic excerpt here - e.g., 'Fig Tree' passage from The Bell Jar]",
    "audiencePrompt": "What lives on your fig tree?"
  },
  
