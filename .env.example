# =============================================================================
# YGGDRASIL SERVER CONFIGURATION
# =============================================================================
# Copy this file to .env and customize for your environment.
# The .env file is gitignored and should contain your local/production settings.

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------

# Node environment (development or production)
NODE_ENV=development

# Host to bind to (use 0.0.0.0 to allow network access from other devices)
# Default: localhost (local only)
# Use HOST=0.0.0.0 for multi-device testing
HOST=localhost

# Port for HTTP server and Socket.IO
# Default: 3000
PORT=3000

# -----------------------------------------------------------------------------
# Timing Engine
# -----------------------------------------------------------------------------

# Enable/disable the timing engine
# When disabled, all timing is manual via controller
# Default: true
TIMING_ENGINE_ENABLED=true

# -----------------------------------------------------------------------------
# OSC Bridge (Ableton Live Integration)
# -----------------------------------------------------------------------------

# Enable/disable OSC communication with Ableton Live
# When disabled, uses a null bridge (no-op)
# Default: true
OSC_ENABLED=true

# Port to send OSC messages to AbletonOSC (AbletonOSC listens on 11000)
# Default: 11000
OSC_SEND_PORT=11000

# Port to receive OSC messages from AbletonOSC (AbletonOSC replies on 11001)
# Default: 11001
OSC_RECEIVE_PORT=11001

# Host address of Ableton Live
# Use 127.0.0.1 for local, or the IP address of another machine
# Default: 127.0.0.1
ABLETON_HOST=127.0.0.1

# -----------------------------------------------------------------------------
# Backups
# -----------------------------------------------------------------------------

# Enable periodic automatic backups (in addition to phase-transition backups)
# Default: false
PERIODIC_BACKUP=false

# Interval between periodic backups (milliseconds)
# Default: 300000 (5 minutes)
PERIODIC_BACKUP_INTERVAL_MS=300000

# Maximum number of backup files to keep
# Older backups are automatically pruned
# Default: 10
MAX_BACKUPS=10

# -----------------------------------------------------------------------------
# Development & Debugging
# -----------------------------------------------------------------------------

# Enable debug logging (if using the debug package)
# Examples:
#   DEBUG=yggdrasil:*     - All yggdrasil debug logs
#   DEBUG=*               - All debug logs
#   DEBUG=yggdrasil:osc   - Only OSC debug logs
# DEBUG=

# -----------------------------------------------------------------------------
# Notes
# -----------------------------------------------------------------------------
# 
# For local development:
#   - Use defaults (localhost, OSC enabled, timing enabled)
#
# For multi-device testing (phones on local network):
#   - Set HOST=0.0.0.0
#   - Find your machine's local IP (e.g., 192.168.1.100)
#   - Access from phones at http://192.168.1.100:3000
#
# For performance without Ableton:
#   - Set OSC_ENABLED=false
#   - Or set TIMING_ENGINE_ENABLED=false for manual timing
#
# For production deployment:
#   - Set NODE_ENV=production
#   - Configure HOST/PORT for your deployment environment
#   - Consider enabling PERIODIC_BACKUP=true
#   - Adjust MAX_BACKUPS based on disk space
